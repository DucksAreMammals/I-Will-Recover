[gd_resource type="Shader" format=2]

[resource]
code = "shader_type canvas_item;

uniform float x_speed = 0.0;
uniform float y_speed = 0.0;

uniform float x_direction = 1.0;
uniform float y_direction = 1.0;

void fragment() {
	vec2 uv = UV;
	uv.y = 1.0 - UV.y;
	COLOR = texture(TEXTURE, vec2(UV.x + (x_speed / 10000.0 * x_direction * -1.0) * uv.y, UV.y));
}"
